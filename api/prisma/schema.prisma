// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  description String
  periodo String
  turma String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  projetos Projects[]
}
model Projects {
  id Int @id @default(autoincrement())
  tema String
  resumo String
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}
model Prof {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Dicente {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model GruPesq {
  id Int @id @default(autoincrement())
  tema String
  nameGrup String
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}
model Image {
  id Int @id @default(autoincrement())
  nome String
  path String
  type String
}
model Arquivo {
  id Int @id @default(autoincrement())
  nome String
  path String
  type String
}
